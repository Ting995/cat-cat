.tab-wrapper{
  display: flex;
  margin-bottom: 10rpx;
}

.tab-item{
  width: 150rpx;
  height: 60rpx;
  border: 1rpx solid transparent;
  text-align: center;
  margin-left: 28rpx;
  line-height: 60rpx;
  border-radius: 12rpx;
}

.tab-item-no-active{
  border-color: #cccccc;
  color: #cccccc;
}

.tab-item-active{
  border-color: #333333;
  color: #333333;
}

.bg-wrapper{
 display: flex;
 flex-wrap: wrap;
}

.bg-item{
  position: relative;
  width: 225rpx;
  height: 150rpx;
  background: var(--bg);
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.material-active{
  border: 2rpx solid #333333;
}

.scroll-wrapper{
  height: calc(100vh - 544rpx);
}

.border-wrapper{
  display: flex;
  flex-wrap: wrap;
 }

 .border-item{
  position: relative;
  width: 215rpx;
  height: 150rpx;
  border: 4rpx var(--border) #f894b1;
  margin-left: 20rpx;
  margin-top: 20rpx;
 }

 .sticker-wrapper{
  display: flex;
  flex-wrap: wrap;
 }

 .sticker-img{
   width: 84rpx;
   height: 84rpx;
 }

 .sticker-item{
  position: relative;
   display: flex;
   justify-content: center;
   align-items: center;
  width: 160rpx;
  height: 150rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border: 2rpx solid #fac0cb;
  border-radius: 12rpx;
 }

 .icon-success{
   position: absolute;
   bottom:0;
   right:0
 }